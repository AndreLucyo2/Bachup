<UserControl x:Class="Bachup.View.BachupItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bachup.View"
             mc:Ignorable="d" 
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             d:DesignWidth="800" d:DesignHeight="850"
             Padding="0, 0, 0, 50">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.RadioButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <materialDesign:PopupBox
            Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
            PlacementMode="LeftAndAlignMiddles"   
            UnfurlOrientation="Horizontal"
            ToolTipService.Placement="Bottom"
            ToolTip="Bachup Item Options"
            Margin="0,10,10,0" 
            HorizontalAlignment="Right" 
            Width="56" 
            PopupMode="Click"
            VerticalAlignment="Top">
            <materialDesign:PopupBox.ToggleContent>
                <materialDesign:PackIcon Kind="DotsHorizontal" Height="24" Width="24" />
            </materialDesign:PopupBox.ToggleContent>
            <materialDesign:PopupBox.ToggleCheckedContent>
                <materialDesign:PackIcon
                    Kind="Close"
                    Width="24"
                    Height="24" />
            </materialDesign:PopupBox.ToggleCheckedContent>
            <StackPanel Orientation="Horizontal">
                <Button
                    ToolTip="Delete"
                    Command="{Binding DeleteBachupItemCommand}"
                    Background="#f44336"
                    BorderBrush="#f44336">
                    <materialDesign:PackIcon Kind="Delete" Width="12" Height="12"/>
                </Button>
                <Button
                    ToolTip="Edit"
                    Command="{Binding EditBachupItemCommand}"
                    Background="#fdd835"
                    BorderBrush="#fdd835">
                    <materialDesign:PackIcon Kind="Edit" Width="12" Height="12"/>
                </Button>
                <Button
                    ToolTip="Run Bachup"
                    Command="{Binding RunBachupCommand}"
                    Background="#43a047"
                    BorderBrush="#43a047">
                    <materialDesign:PackIcon Kind="Play" Width="12" Height="12"/>
                </Button>
            </StackPanel>
        </materialDesign:PopupBox>
        <materialDesign:Chip
            Content="Source Broken"           
            Margin="100,52,0,0" 
            ToolTip="Repair Source"
            Grid.Row="1" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Command="{Binding RepairSourceCommand}" 
            Visibility="{Binding Path=EnableRepairSourceButton, Converter={StaticResource BoolToVis}}"
            Width="138" >
            <materialDesign:Chip.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Red.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </materialDesign:Chip.Resources>
            <materialDesign:Chip.Icon>
                <materialDesign:PackIcon
                    Kind="ReportProblem"></materialDesign:PackIcon>
            </materialDesign:Chip.Icon>
        </materialDesign:Chip>
        <TextBlock 
            x:Name="BachupItemName" 
            Margin="10,10,71,12" 
            TextWrapping="Wrap" 
            Text="{Binding BachupItem.Name}"
            Style="{StaticResource MaterialDesignDisplay1TextBlock}">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit Bachup Item" Command="{Binding EditBachupItemCommand}"/>
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <TextBlock 
            x:Name="lastbachup" 
            Margin="10,10,10,0"
            TextWrapping="Wrap" 
            Text="{Binding SizeInMB}"
            Visibility="{Binding Path=EnableShowSourceButton, Converter={StaticResource BoolToVis}}"
            Style="{StaticResource MaterialDesignBody1TextBlock}" Height="17" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock 
            x:Name="lastbachup_Copy" 
            Margin="10,27,10,0"
            TextWrapping="Wrap" 
            Text="{Binding LastBachup}"
            Visibility="{Binding LastBachupVisible, Converter={StaticResource BoolToVis}}"
            Style="{StaticResource MaterialDesignBody1TextBlock}" Height="17" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock 
            x:Name="textBlock1" 
            Margin="10,58,0,0"
            TextWrapping="Wrap" 
            Text="Source Path" 
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignSubheadingTextBlock}" Grid.Row="1" Height="20" HorizontalAlignment="Left" Width="85"/>
        <TextBox 
            x:Name="textBox"
            Height="23" Margin="10,92,71,0" 
            TextWrapping="Wrap"
            Text="{Binding BachupItem.Source}" 
            VerticalAlignment="Top"
            IsReadOnly="True" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}"
            Content="{wpf:PackIcon Kind=FolderUpload}"
            ToolTip="Show Source"
            Margin="0,83,10,0"
            HorizontalAlignment="Right"
            Width="56" 
            IsEnabled="{Binding EnableShowSourceButton}"
            VerticalAlignment="Top" 
            Command="{Binding ShowSourceCommand}" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}"
            Content="{wpf:PackIcon Add}"
            ToolTip="Add Destination"
            Margin="0,184,10,0"
            HorizontalAlignment="Right"
            Width="56" 
            VerticalAlignment="Top" 
            
            Command="{Binding AddDestinationCommand}" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}"
            Content="{wpf:PackIcon Delete}"
            ToolTip="Removed Selected Destination"
            Margin="0,221,10,0"
            HorizontalAlignment="Right"
            Width="56" 
            VerticalAlignment="Top"
            IsEnabled="{Binding EnableDeleteButton}"
            Command="{Binding DeleteDestinationCommand}" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}"
            Content="{materialDesign:PackIcon FolderUpload}"
            ToolTip="Show Selected Destination"
            Margin="0,258,10,0"
            HorizontalAlignment="Right"
            Width="56" 
            VerticalAlignment="Top"
            IsEnabled="{Binding EnableDeleteButton}"
            Command="{Binding ShowDestinationCommand}" Grid.Row="1"/>
        <GroupBox x:Name="destinationGroupBox" Header="Destinations" Margin="10,133,71,0" Grid.Row="1"  Height="200" VerticalAlignment="Top">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Kind="MapMarker"
                            Height="32"
                            Width="32"
                            VerticalAlignment="Center" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                            Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <ListBox 
                x:Name="listBox" 
                ItemsSource="{Binding BachupItem.Destinations}"
                SelectedItem="{Binding SelectedDestination}" Margin="0,0,0,2" />
        </GroupBox>
        <GroupBox x:Name="bachupHistoryGroupBox" Header="Bachup History" Margin="10,338,71,0" Grid.Row="1" Height="235" VerticalAlignment="Top">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Kind="History"
                            Height="32"
                            Width="32"
                            VerticalAlignment="Center" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                            Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <ListBox 
                x:Name="BachupHistoryGroupBox" 
                ItemsSource="{Binding BachupItem.BachupHistory}"
                Margin="0,0,0,2"
                />
        </GroupBox>
        <TextBlock 
            x:Name="textBlock"
            Margin="10,589,10,0"
            Grid.Row="1" 
            TextWrapping="Wrap"
            Text="Options" 
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignSubheadingTextBlock}"/>
        <TextBlock 
            x:Name="textBlock_Copy"
            Margin="10,635,0,0"
            Grid.Row="1" 
            TextWrapping="Wrap"
            Text="ZIP Bachup" 
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignBody1TextBlock}" HorizontalAlignment="Left" Width="74"/>
        <ToggleButton
            Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
            VerticalAlignment="Top"  
            ToolTip="Toggle Color Mode"
            IsChecked="{Binding BachupItem.ZipBachup}"
            Command="{Binding SetBachupItemZippedCommand}" Margin="89,635,0,0" Grid.Row="1" HorizontalAlignment="Left" Width="44"/>
        <Separator
      Style="{StaticResource MaterialDesignLightSeparator}" Grid.Row="1" Margin="10,614,10,0" VerticalAlignment="Top"/>
        


    </Grid>
</UserControl>
