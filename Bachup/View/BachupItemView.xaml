<UserControl x:Class="Bachup.View.BachupItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bachup.View"
             mc:Ignorable="d" 
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             d:DesignWidth="800" d:DesignHeight="602">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.RadioButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <materialDesign:PopupBox
            Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
            PlacementMode="LeftAndAlignMiddles"   
            UnfurlOrientation="Horizontal"
            ToolTipService.Placement="Bottom"
            ToolTip="Bachup Item Options"
            Margin="0,10,10,0" 
            HorizontalAlignment="Right" 
            Width="56" 
            PopupMode="Click"
            VerticalAlignment="Top">
            <materialDesign:PopupBox.ToggleContent>
                <materialDesign:PackIcon Kind="DotsHorizontal" Height="24" Width="24" />
            </materialDesign:PopupBox.ToggleContent>
            <materialDesign:PopupBox.ToggleCheckedContent>
                <materialDesign:PackIcon
                    Kind="Close"
                    Width="24"
                    Height="24" />
            </materialDesign:PopupBox.ToggleCheckedContent>
            <StackPanel Orientation="Horizontal">
                <Button
                    ToolTip="Delete"
                    Command="{Binding DeleteBachupItemCommand}"
                    Background="#f44336"
                    BorderBrush="#f44336">
                    <materialDesign:PackIcon Kind="Delete" Width="12" Height="12"/>
                </Button>
                <Button
                    ToolTip="Edit"
                    Command="{Binding EditBachupItemCommand}"
                    Background="#fdd835"
                    BorderBrush="#fdd835">
                    <materialDesign:PackIcon Kind="Edit" Width="12" Height="12"/>
                </Button>
                <Button
                    ToolTip="Run Bachup"
                    Command="{Binding RunBachupCommand}"
                    Background="#43a047"
                    BorderBrush="#43a047">
                    <materialDesign:PackIcon Kind="Play" Width="12" Height="12"/>
                </Button>
            </StackPanel>
        </materialDesign:PopupBox>
        <TextBlock 
            x:Name="BachupItemName" 
            Margin="10,10,71,12" 
            TextWrapping="Wrap" 
            Text="{Binding BachupItem.Name}"
            Style="{StaticResource MaterialDesignDisplay1TextBlock}">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit Bachup Item" Command="{Binding EditBachupItemCommand}"/>
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <TextBlock 
            x:Name="lastbachup" 
            Margin="10,10,10,0"
            TextWrapping="Wrap" 
            Text="{Binding LastBachup}"
            Style="{StaticResource MaterialDesignBody1TextBlock}" Height="17" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock 
            x:Name="textBlock1" 
            Margin="10,58,10,0"
            TextWrapping="Wrap" 
            Text="Source Path" 
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignSubheadingTextBlock}" Grid.Row="1" Height="20"/>
        <TextBox 
            x:Name="textBox"
            Height="23" Margin="10,92,71,0" 
            TextWrapping="Wrap"
            Text="{Binding BachupItem.Source}" 
            VerticalAlignment="Top"
            IsReadOnly="True" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}"
            Content="{wpf:PackIcon FolderUpload}"
            ToolTip="Show Source"
            Margin="0,83,10,0"
            HorizontalAlignment="Right"
            Width="56" 
            VerticalAlignment="Top" 
            Command="{Binding ShowSourceCommand}" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}"
            Content="{wpf:PackIcon Add}"
            ToolTip="Add Destination"
            Margin="0,184,10,0"
            HorizontalAlignment="Right"
            Width="56" 
            VerticalAlignment="Top" 
            Command="{Binding AddDestinationCommand}" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}"
            Content="{wpf:PackIcon Delete}"
            ToolTip="Removed Selected Destination"
            Margin="0,221,10,0"
            HorizontalAlignment="Right"
            Width="56" 
            VerticalAlignment="Top"
            IsEnabled="{Binding EnableDeleteButton}"
            Command="{Binding DeleteDestinationCommand}" Grid.Row="1"/>
        <GroupBox x:Name="destinationGroupBox" Header="Destinations" Margin="10,133,71,10" Grid.Row="1" MinHeight="300">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Kind="MapMarker"
                            Height="32"
                            Width="32"
                            VerticalAlignment="Center" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                            Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <ListBox 
                x:Name="listBox" 
                ItemsSource="{Binding BachupItem.Destinations}"
                SelectedItem="{Binding SelectedDestination}" Height="275" VerticalAlignment="Top" />
        </GroupBox>
    </Grid>
</UserControl>
