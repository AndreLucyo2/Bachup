                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Content="" ToolTip="Orange" Height="28" Width="28" Margin="109,47,0,0"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="{Binding OrangeActive}"
                              Command="{Binding SetThemeCommand}"
                              CommandParameter="{x:Static model:ThemeColors.orange}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ToggleButton.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Orange.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Content="" ToolTip="Purple" Height="28" Width="28" Margin="175,80,0,0"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="{Binding PurpleActive}"
                              Command="{Binding SetThemeCommand}"
                              CommandParameter="{x:Static model:ThemeColors.purple}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ToggleButton.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Purple.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton
                            Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                            ToolTip="Change Theme Lighting Schema"
                            IsChecked="{Binding DarkMode}"
                            Command="{Binding SetDarkModeCommand}"
                            Width="44" Margin="10,145,0,0" RenderTransformOrigin="3.169,0.412" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top"/>
                <TextBlock x:Name="textBlock" 
                    HorizontalAlignment="Left" 
                    Margin="10,125,0,0" 
                    TextWrapping="Wrap" 
                    Text="{Binding ThemeName}" 
                    TextAlignment="Left"
                    VerticalAlignment="Top" Width="44"/>
                <ToggleButton
                Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                ToolTip="Keeps Window On Top"
                IsChecked="{Binding KeepOnTop}"
                Command="{Binding SetDarkModeCommand}"
                Width="44" Margin="10,255,0,0" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top"/>
                <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                    x:Name="label_colors_Copy" HorizontalAlignment="Left" Margin="10,188,0,0" TextWrapping="Wrap" Text="Options" VerticalAlignment="Top"/>
                <ToggleButton
                    Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                    ToolTip="Will Remember Last Opened Bachup Option"
                    IsChecked="{Binding SaveView}"
                    Command="{Binding SetDarkModeCommand}"
                    Width="44" Margin="109,255,0,0" RenderTransformOrigin="3.169,0.412" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top"/>
                <TextBlock 
            x:Name="textBlock_Copy" 
            HorizontalAlignment="Left" 
            Margin="10,234,0,0" 
            TextWrapping="Wrap" 
            Text="Keep On Top" 
            TextAlignment="Left"
            VerticalAlignment="Top" Width="72"/>
                <TextBlock 
                    x:Name="textBlock_Copy1" 
                    HorizontalAlignment="Left" 
                    Margin="109,237,0,0" 
                    TextWrapping="Wrap" 
                    Text="Save View" 
                    TextAlignment="Left"
                    VerticalAlignment="Top" Width="72"/>
                <TextBlock 
                            x:Name="versionNumber" 
                            Margin="10,0,10,62" 
                            TextWrapping="Wrap"
                            Text="{Binding VersionNumber}" 
                            TextAlignment="Center" 
                            Height="14"
                            Style="{StaticResource MaterialDesignButtonTextBlock}"
                            VerticalAlignment="Bottom" 
                            Grid.Row="11"
                            Grid.ColumnSpan="3"
                            />
                <materialDesign:Badged
                            Margin="0,0,0,20"
                            Height="22" 
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            Grid.ColumnSpan="3"
                            Grid.Row="11"
                            Badge="{materialDesign:PackIcon Kind=Heart}" BadgeColorZoneMode="Inverted" Width="98">
                    <Button
                                x:Name="button" 
                                FontSize="12" 
                                Command="{Binding ShowSiteCommand}" Height="22" Width="98">Chris Stayte</Button>
                </materialDesign:Badged>
            </Grid>
        </ScrollViewer>


    </Grid>
</UserControl>
