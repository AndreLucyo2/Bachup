                <ToggleButton
                    Width="44"
                    Height="27"
                    Margin="10,145,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding SetDarkModeCommand}"
                    IsChecked="{Binding DarkMode}"
                    RenderTransformOrigin="3.169,0.412"
                    Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                    ToolTip="Change Theme Lighting Schema" />
                <TextBlock
                    x:Name="textBlock"
                    Width="44"
                    Margin="10,125,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="{Binding ThemeName}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <ToggleButton
                    Width="72"
                    Height="27"
                    Margin="10,255,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding SaveSettingsCommand}"
                    IsChecked="{Binding KeepOnTop}"
                    Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                    ToolTip="Keeps Window On Top" />
                <TextBlock
                    x:Name="label_colors_Copy"
                    Margin="10,188,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                    Text="Options"
                    TextWrapping="Wrap" />
                <ToggleButton
                    Width="50"
                    Height="27"
                    Margin="100,255,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding SaveSettingsCommand}"
                    IsChecked="{Binding SaveView}"
                    RenderTransformOrigin="3.169,0.412"
                    Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                    ToolTip="Will Remember Last Opened Bachup Option" />
                <TextBlock
                    x:Name="textBlock_Copy"
                    Width="72"
                    Margin="10,234,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Keep On Top"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="textBlock_Copy1"
                    Width="56"
                    Margin="100,234,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    RenderTransformOrigin="0.468,-0.104"
                    Text="Save View"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="versionNumber"
                    Grid.Row="11"
                    Grid.ColumnSpan="3"
                    Height="14"
                    Margin="10,0,10,62"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource MaterialDesignButtonTextBlock}"
                    Text="{Binding VersionNumber}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <materialDesign:Badged
                    Grid.Row="11"
                    Grid.ColumnSpan="3"
                    Width="98"
                    Height="22"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Badge="{materialDesign:PackIcon Kind=Heart}"
                    BadgeColorZoneMode="Inverted">
                    <Button
                        x:Name="button"
                        Width="98"
                        Height="22"
                        Command="{Binding ShowSiteCommand}"
                        FontSize="12">
                        Chris Stayte
                    </Button>
                </materialDesign:Badged>
                <TextBlock
                    x:Name="textBlock_Copy2"
                    Width="39"
                    Margin="183,234,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Beta"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <ToggleButton
                    Width="39"
                    Height="27"
                    Margin="183,255,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding SaveSettingsCommand}"
                    IsChecked="{Binding Beta}"
                    RenderTransformOrigin="3.169,0.412"
                    Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                    ToolTip="Enable Beta Options (RISKY) NOT GAURENTEED TO WORK" />

