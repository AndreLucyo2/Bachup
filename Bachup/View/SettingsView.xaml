<UserControl x:Class="Bachup.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:Bachup.Model"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"           
             xmlns:local="clr-namespace:Bachup.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="310">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                    x:Name="label_colors" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Theme" VerticalAlignment="Top"/>
                <ToggleButton Content="" ToolTip="Yellow" Height="28" Width="28" Margin="175,47,0,0"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="{Binding YellowActive}"
                              Command="{Binding SetThemeCommand}"
                              CommandParameter="{x:Static model:ThemeColors.yellow}" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <ToggleButton.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Yellow.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Content="" ToolTip="Amber" Height="28" Width="28" Margin="142,47,0,0"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="{Binding AmberActive}"
                              Command="{Binding SetThemeCommand}"
                              CommandParameter="{x:Static model:ThemeColors.amber}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ToggleButton.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Amber.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Content="" ToolTip="Deep Orange" Height="28" Width="28" Margin="76,47,0,0"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="{Binding DeepOrangeActive}"
                              Command="{Binding SetThemeCommand}"
                              CommandParameter="{x:Static model:ThemeColors.deeporange}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ToggleButton.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepOrange.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Content="" ToolTip="Light Blue" Height="28" Width="28" Margin="109,80,0,0"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="{Binding LightBlueActive}"
                              Command="{Binding SetThemeCommand}"
                              CommandParameter="{x:Static model:ThemeColors.lightblue}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ToggleButton.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.LightBlue.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Content="" ToolTip="Teal" Height="28" Width="28" Margin="43,80,0,0"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="{Binding TealActive}"
                              Command="{Binding SetThemeCommand}"
                              CommandParameter="{x:Static model:ThemeColors.teal}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ToggleButton.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Teal.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Content="" ToolTip="Cyan" Height="28" Width="28" Margin="142,80,0,0"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="{Binding CyanActive}"
                              Command="{Binding SetThemeCommand}"
                              CommandParameter="{x:Static model:ThemeColors.cyan}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ToggleButton.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Cyan.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Content="" ToolTip="Pink" Height="28" Width="28" Margin="43,47,0,0"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              IsChecked="{Binding PinkActive}"
                              Command="{Binding SetThemeCommand}"
                              CommandParameter="{x:Static model:ThemeColors.pink}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ToggleButton.Resources>
