<UserControl x:Class="Bachup.View.BachupGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialDesignConverters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
             xmlns:local="clr-namespace:Bachup.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             xmlns:converter="clr-namespace:Bachup.Helpers">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.RadioButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <materialDesignConverters:BooleanToVisibilityConverter x:Key="BooleanToVisiblityConverter" TrueValue="Visible" FalseValue="Hidden"></materialDesignConverters:BooleanToVisibilityConverter>
            <converter:DateConverter x:Key="DateConverter"/>
        </ResourceDictionary>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>
        <TextBlock 
            x:Name="textBlock"
            Margin="10,10,132,11" 
            TextWrapping="Wrap"
            Style="{StaticResource MaterialDesignDisplay1TextBlock}"
            Text="{Binding BachupGroup.Name}"/>
        <Button
            Style="{StaticResource MaterialDesignFloatingActionButton}"   
            ToolTipService.Placement="Bottom"
            ToolTip="Bachup Group Options"
            Margin="0,10,10,0"
            HorizontalAlignment="Right"
            Width="56" 
            VerticalAlignment="Top"
            Command="{Binding AddBachupItemCommand}">
            <materialDesign:PackIcon Kind="Plus" Height="24" Width="24"/>
        </Button>
        <Button
            Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
            ToolTip="Delete Bachup Group"
            Command="{Binding DeleteBachupGroupCommand}"
            Background="#f44336"
            BorderBrush="#f44336" 
            Margin="0,18,71,0" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top">
            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
        </Button>
        <DataGrid 
            x:Name="dataGrid"
            Margin="10,35,10,10"
            Visibility="{Binding ShowBachupItems, Converter={StaticResource BooleanToVisiblityConverter}}"
            ItemsSource="{Binding BachupGroup.BachupItems}"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Binding="{Binding Name}"
                    Header="Name"
                    IsReadOnly="True"
                    CanUserReorder="True"
                    ElementStyle="{StaticResource MaterialDesignBody2TextBlock}"/>
                <DataGridTextColumn 
                    Binding="{Binding DateCreated}"
                    Header="Date Created"
                    IsReadOnly="True"
                    CanUserReorder="True"
                    ElementStyle="{StaticResource MaterialDesignBody2TextBlock}"/>
                <DataGridTextColumn 
                    Binding="{Binding LastBachup, Converter={StaticResource DateConverter}}"
                    Header="Last Bachup"
                    IsReadOnly="True"
                    CanUserReorder="True"
                    ElementStyle="{StaticResource MaterialDesignBody2TextBlock}"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock 
            x:Name="textBlock1"
            Margin="10,10,10,0" 
            TextWrapping="Wrap" 
            Text="Bachup Items"
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignSubheadingTextBlock}"
            Visibility="{Binding ShowBachupItems, Converter={StaticResource BooleanToVisiblityConverter}}" Grid.Row="1" Height="20"/>
        <TextBlock 
            x:Name="textBlock2" 
            Margin="10,35,10,0" 
            TextWrapping="Wrap" 
            Text="Add Some Bachup Items"
            Height="333" 
            VerticalAlignment="Top" 
            Style="{StaticResource MaterialDesignHeadlineTextBlock}"
            Visibility="{Binding ShowAddBachupItems, Converter={StaticResource BooleanToVisiblityConverter}}"
            TextAlignment="Center" Grid.Row="1"/>

        <materialDesign:Snackbar
            IsActive="{Binding ShowMessage}"
            x:Name="SnackbarTwo" Margin="10,0" HorizontalAlignment="Stretch" MaxWidth="400" Grid.Row="1">
            <materialDesign:SnackbarMessage
                Content="{Binding Message}"
                ActionCommand="{Binding CloseMessageCommand}"
                ActionContent="Okay" />
        </materialDesign:Snackbar>

    </Grid>
</UserControl>
